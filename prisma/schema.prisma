generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_ADDON_URI")
}

model Alumno {
  id                 Int           @id @default(autoincrement())
  nombre             String
  apellido           String
  fechaNacimiento    String
  fechaInicio        String
  graduacionActual   String 
  fechaGradActual    String
  email              String        
  telefono           String
  direccion          String
  dni                String       
  passwordHash       String
  foto               String
  graduaciones       Graduacion[]
  asistencia         Clase[]
  Eventos            Evento[]
  
}

model Graduacion {
  id       Int      @id @default(autoincrement())
  alumno   Alumno[]
  nivel    String
  tipo     String
  fecha    String
  dojo     String
  
}

model Clase {
  id          Int       @id @default(autoincrement())
  fecha       String
  instructor  String
  presentes   Alumno[]
}


model Evento {
  id          Int       @id @default(autoincrement())
  nombre      String
  fecha       String
  categoria   String
  presentes   Alumno[]
}

model Feriado {
  id          Int       @id @default(autoincrement())
  fecha       String
  descripcion String
}
