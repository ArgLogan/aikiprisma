generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_ADDON_URI")
}

model Alumno {
  id               Int          @id @default(autoincrement())
  nombre           String
  apellido         String
  fechaNacimiento  String
  fechaInicio      String
  graduacionActual String
  fechaGradActual  String
  email            String
  //telefono         String
  //direccion        String
  //dni              String
  passwordHash     String
  foto             String
  asistencia       Clase[]      @relation("AlumnoToClase")
  Eventos          Evento[]     @relation("AlumnoToEvento")
  graduaciones     Graduacion[] @relation("AlumnoToGraduacion")
}

model Graduacion {
  id     Int      @id @default(autoincrement())
  nivel  String
  tipo   String
  fecha  String
  dojo   String
  alumno Alumno[] @relation("AlumnoToGraduacion")
}

model Clase {
  id         Int      @id @default(autoincrement())
  fecha      String
  instructor String
  tipo       String
  presentes  Alumno[] @relation("AlumnoToClase")
}

model Evento {
  id        Int      @id @default(autoincrement())
  nombre    String
  fecha     String
  categoria String
  presentes Alumno[] @relation("AlumnoToEvento")
}

model Feriado {
  id          Int    @id @default(autoincrement())
  fecha       String
  descripcion String
}
